{
    "name": "updater/timberland-ai-page-builder",
    "description": "Generate page/post layouts from natural language using Claude AI",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=8.1",
        "anthropic-ai/sdk": "^0.1",
        "openai-php/client": "^0.10",
        "symfony/http-client": "^6.4 || ^7.0",
        "nyholm/psr7": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "TimberlandAIPageBuilder\\": "includes/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
